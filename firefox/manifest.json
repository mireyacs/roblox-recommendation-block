{
  "manifest_version": 3,
  "name": "ZeroTolerance Blocker",
  "version": "1.0.0",
  "description": "Zero Tolerance for inappropriate games and items on Roblox",
  "browser_specific_settings": {
    "gecko": {
      "id": "zerotolerance@example.com",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://games.roblox.com/*",
    "https://thumbnails.roblox.com/*",
    "https://apis.roblox.com/*",
    "https://economy.roblox.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.roblox.com/*",
        "http://*.roblox.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
